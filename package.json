{
  "name": "semester-scheduler",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build2": "vue-tsc --noEmit && vite build",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint --ext .js,.vue src --ignore-path .gitignore --max-warnings 0",
    "lint-fix": "eslint --ext .js,.vue src --ignore-path .gitignore --max-warnings 0 --fix"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.4",
    "@fortawesome/fontawesome-svg-core": "^1.3.0",
    "@fortawesome/free-solid-svg-icons": "^6.0.0",
    "@fortawesome/vue-fontawesome": "^3.0.0-5",
    "bulma": "^0.9.3",
    "vite-plugin-eslint": "^1.8.1",
    "vue": "^3.2.47",
    "vue-router": "^4.1.6",
    "vuedraggable": "^4.1.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.1.0",
    "@vue/eslint-config-airbnb": "^7.0.0",
    "eslint": "^8.39.0",
    "eslint-plugin-vue": "^9.11.0",
    "sass": "^1.62.1",
    "vite": "^4.3.3",
    "vue-tsc": "^1.8.3"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "@vue/airbnb"
    ],
    "rules": {
      "max-len": [
        "error",
        {
          "code": 120
        }
      ],
      "vue/max-len": [
        "error",
        {
          "code": 120
        }
      ],
      "vue/multi-word-component-names": "off",
      "vuejs-accessibility/anchor-has-content": "off"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
